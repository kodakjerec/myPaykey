<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Settings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pk_settings_toolbar_color</item>
        <item name="colorPrimaryDark">@color/pk_settings_statusbar_color</item>
        <item name="colorAccent">@color/pk_settings_accesnt_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Style for the Setup Activity-->
    <style name="MyPayKeySetupActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/primary_color</item>
    </style>

</resources>
